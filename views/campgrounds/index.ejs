<% include ../partials/header %>

<section id="intro">
<div class="container" id="yelp-header">
    <header>
        <div class="container">
         
        <h1>Welcome to YelpCamp</h1>
        <p>Hand-picked campgrounds from all over the world</p>
        
        <p>
            
        <a href="#label"><span id="arrow" class="glyphicon glyphicon-menu-down"></span></a>
        
            
        </p>
    </div>
</header>
</section>

        <div class="row" id="label">
            <div class="col-lg-12">
                <h3>Our Most Popular Campgrounds:</h3>
                <p>
            <a class="btn btn-success btn-lg" href="/campgrounds/new">Add New Campground!</a>
        </p>
    </div>
    
</div>
</div>
<div class="container">
    <div class="row text-center" style="display:flex; flex-wrap:wrap;">
        <% campgrounds.forEach(function(campground){ %>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail">
                     <img src=" <%=campground.image%> ">
                     <div class="caption">
                         <h4><%=campground.name%></h4>
                     </div>
                     <p>
                         <a href="/campgrounds/<%=campground._id%>" class="btn btn-primary">More Info</a>
                     </p>
                 </div>
            </div>
        <% }); %>
    </div>

</div>

<% include ../partials/footer %>